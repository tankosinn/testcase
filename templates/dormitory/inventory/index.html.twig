{% extends 'index.html.twig' %}

{% block title %}
	Envanter
{% endblock %}

{% block page %}
	<div class="page" {{ stimulus_controller('dormitory') }}>
		<div class="page-header">
			Envanter
			<a href="{{ path('dormitory_item_create') }}" class="btn btn-sm btn-dark">
				<i class="fa-solid fa-plus"></i>
				Yeni Eşya/Ürün Ekle
			</a>
		</div>
		<div class="page-body">
			<div class="table-container">
				<table>
					<thead>
						<tr>
							<th class="text-center"></th>
							<th class="text-center">Eşya/Ürün</th>
							<th>Toplam</th>
							<th>Odada</th>
							<th>Kullanımda</th>
							<th>Depoda</th>
							<th class="text-center">İşlemler</th>
						</tr>
					</thead>
					<tbody>
						{% for item in  pagination %}
							<tr>
								<td class="text-center">
									<a href="{{ path('dormitory_item_create', {slug: item.slug}) }}" class="btn btn-sm btn-outline-primary">
										<i class="fa-regular fa-pen-to-square"></i>
										Düzenle
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="pagination">
				{{ knp_pagination_render(pagination) }}
			</div>
		</div>
	</div>
{% endblock %}
