{% extends 'index.html.twig' %}

{% block title %}
	Anasayfa
{% endblock %}

{% block page %}
    <div class="page">
        <div class="page-header">
            Yeni Yurt Ekle
            <a href="{{ path('app_index') }}" class="btn btn-sm btn-dark">
                <i class="fa-solid fa-plus"></i>
                Yurtlar
            </a>
        </div>
        <div class="page-body">
            <form class="form" method="post" action="{{ path('admin_dormitory_registration') }}" enctype="multipart/form-data">
                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="İşletme Adı"/>
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="E-posta" autocomplete="email"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Şifre" autocomplete="current-password"/>
                    </div>
                    <div class="form-group">
                        <input type="text" name="phone" class="form-control" placeholder="Telefon Numarası"/>
                    </div>
                </div>
                <div class="form-group">
                    <textarea name="address" class="form-control" placeholder="Adres"></textarea>
                </div>
                <div class="form-group">
                    <label>Logo</label>
                    <input type="file" name="photo" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
{% endblock %}
